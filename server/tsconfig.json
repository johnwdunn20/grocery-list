{
  "compilerOptions": {
    "target": "es6", // Set the ECMAScript target version
    "module": "commonjs",
    "outDir": "./dist/", // Output directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,          // allow JavaScript files to be compiled
  },
  "include": [
    "/**/*"
    ],
  "exclude": ["node_modules"]
}